<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
  <RadioButton android:id="@+id/meal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Meal"
      android:onClick="onRadioButtonClicked"/>
  <RadioButton android:id="@+id/localtravel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Local Travel"
      android:onClick="onRadioButtonClicked"/>
  <RadioButton android:id="@+id/distanttravel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Distant Travel"
      android:onClick="onRadioButtonClicked"/>
  <RadioButton android:id="@+id/teamexpense"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Team Expense"
      android:onClick="onRadioButtonClicked"/>
  <RadioButton android:id="@+id/misc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Miscellaneous"
      android:onClick="onRadioButtonClicked"/>
</RadioGroup>